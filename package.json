{
  "name": "@frogstep/core",
  "version": "1.0.0",
  "description": "Core package for the project",
  "engines": {
    "node": ">=22"
  },
  "keywords": [],
  "scripts": {
    "fe:start": "pnpm --filter @frogstep/front-end start",
    "fe:build": "pnpm --filter @frogstep/front-end build",
    "fe:dev": "pnpm --filter @frogstep/front-end dev",
    "be:start": "pnpm --filter @frogstep/back-end start",
    "be:build": "pnpm --filter @frogstep/back-end build",
    "be:dev": "pnpm --filter @frogstep/back-end start:dev:wp",
    "be:migrate": "pnpm --filter @frogstep/back-end migrate",
    "ui:add": "pnpm --filter @common/ui add-component",
    "lint": "biome check --fix",
    "prepare": "husky"
  },
  "author": "Ivan Cerovina",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "devDependencies": {
    "typescript": "^5",
    "@biomejs/biome": "2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css}": [
      "pnpm lint --no-errors-on-unmatched"
    ]
  }
}
